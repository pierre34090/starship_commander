+import { useState, useEffect } from "react";
+import "./App.css";
+import CombatPanel from "./components/CombatPanel";
+import EconomicPanel from "./components/EconomicPanel";
+import ShipPanel from "./components/ShipPanel";
+import { generateEnemy } from "./logic/enemy";
+
+function App() {
+  const [money, setMoney] = useState(10);
+  const [scrap, setScrap] = useState(0);
+  const [income, setIncome] = useState(1);
+  const [force, setForce] = useState(1);
+  const [hp, setHp] = useState(100);
+  const [maxHp, setMaxHp] = useState(100);
+  const [lastResult, setLastResult] = useState(null);
+  const [ecoCost, setEcoCost] = useState(15);
+  const [forceCost, setForceCost] = useState(20);
+  const [enemy, setEnemy] = useState(null);
+  const [gameOver, setGameOver] = useState(false);
+
+  useEffect(() => {
+    const interval = setInterval(() => {
+      setMoney((prev) => prev + income * 0.25);
+    }, 250);
+    return () => clearInterval(interval);
+  }, [income]);
+
+  const upgradeEconomy = () => {
+    if (money >= ecoCost) {
+      setMoney((prev) => prev - ecoCost);
+      setIncome((prev) => Math.round(prev * 1.5));
+      setEcoCost((prev) => Math.round(prev * 2));
+    }
+  };
+
+  const upgradeForce = () => {
+    if (money >= forceCost) {
+      setMoney((prev) => prev - forceCost);
+      setForce((prev) => prev + 1);
+      setForceCost((prev) => Math.round(prev * 1.8));
+    }
+  };
+
+  const handleGenerateEnemy = () => {
+    const newEnemy = generateEnemy();
+    newEnemy.maxHp = newEnemy.hp;
+    setEnemy(newEnemy);
+    setLastResult(null);
+  };
+
+  const fight = () => {
+    if (!enemy || gameOver) return;
+
+    const damageToEnemy = force;
+    const damageToPlayer = enemy.force;
+
+    const newEnemyHp = enemy.hp - damageToEnemy;
+    const newPlayerHp = hp - damageToPlayer;
+
+    if (newEnemyHp <= 0 && newPlayerHp <= 0) {
+      setEnemy(null);
+      setHp(0);
+      setGameOver(true);
+      setLastResult("‚ò†Ô∏è Both you and the enemy were destroyed");
+    } else if (newEnemyHp <= 0) {
+      setEnemy(null);
+      const reward = 5;
+      setScrap((prev) => prev + reward); // reward scrap
+      setLastResult(`‚úÖ Victory! You destroyed ${enemy.name} and collected ${reward} scrap.`);
+    } else if (newPlayerHp <= 0) {
+      setHp(0);
+      setGameOver(true);
+      setLastResult(`‚ò†Ô∏è Defeat! You were destroyed by ${enemy.name}`);
+    } else {
+      setEnemy({ ...enemy, hp: newEnemyHp });
+      setHp(newPlayerHp);
+    }
+  };
+
+  const skip = () => {
+    if (enemy) {
+      setLastResult(`‚è≠ You fled from ${enemy.name}`);
+      setEnemy(null);
+    }
+  };
+
+  const restartGame = () => {
+    setMoney(10);
+    setIncome(1);
+    setForce(1);
+    setHp(100);
+    setMaxHp(100);
+    setLastResult(null);
+    setEcoCost(15);
+    setForceCost(20);
+    setEnemy(null);
+    setGameOver(false);
+  };
+
+  return (
+    <div className="App" style={{ padding: "2rem", fontFamily: "sans-serif" }}>
+      <p><strong>Scrap:</strong> {scrap}</p>
+      <h1>Starship Command</h1>
+
+      <ShipPanel force={force} hp={hp} maxHp={maxHp} />
+
+      <br /><hr /><br />
+
+      <EconomicPanel
+        money={money}
+        income={income}
+        ecoCost={ecoCost}
+        forceCost={forceCost}
+        onUpgradeEco={upgradeEconomy}
+        onUpgradeForce={upgradeForce}
+      />
+
+      <br /><hr /><br />
+
+      {gameOver ? (
+        <div>
+          <h2>üíÄ Game Over</h2>
+          <button onClick={restartGame}>üîÅ Restart</button>
+        </div>
+      ) : (
+        <CombatPanel
+          enemy={enemy}
+          onGenerate={handleGenerateEnemy}
+          onFight={fight}
+          onSkip={skip}
+        />
+      )}
+
+      {lastResult && <p><em>{lastResult}</em></p>}
+    </div>
+  );
+}
+
+export default App;